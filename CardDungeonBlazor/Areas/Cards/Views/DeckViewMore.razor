@page "/decks/fullView/{id}"
@using CardDungeonBlazor.Areas.Cards.Controllers
@inherits DecksViewMoreController


<MudItem Class="d-flex justify-center py-2 px-1 mt-6">
    <MudCard>
        <MudCardContent>
            <MudText Typo="Typo.h5">Deck with name @Model.Name</MudText>
            <MudText Typo="Typo.body2">with description @Model.Description and @Model.Cards.Count Cards</MudText>
            <MudText Typo="Typo.body2">This deck was created on @Model.CreatedOn by user @Model.CreatedByUser.Name</MudText>
            <MudText Typo="Typo.body2">The type of this deck is @Model.DeckType.ToString()</MudText>

        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => RedirectToAllDecks()">Go back to all decks</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => RedirectToCardsInTheDeck()">Go to the cards in the deck</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>