@page "/decks/all"
@using CardDungeonBlazor.Areas.Cards.Controllers
@inherits AllDecksController

<MudText Typo="Typo.h3">All Decks</MudText>

<MudGrid>
    @foreach (var deck in Model)
    {
        <MudItem Class="d-flex align-center justify-center mud-width-full py-8" xs=3>
            <MudCard>
                <MudCardMedia Image="@deck.Cards.FirstOrDefault().Image.Img" />
                <MudCardContent>
                    <MudText Typo="Typo.h5">Deck with name @deck.Name</MudText>
                    <MudText Typo="Typo.body2">With a type of @deck.DeckType and it has @deck.Cards.Count cards</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Info" @onclick="() => RedirectToFullView(deck.Id)">See More</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => RedirectToEdit(deck.Id)">Edit</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Error" @onclick="() => Delete(deck.Id)">Delete</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
<MudButton Variant="Variant.Text" StartIcon="@Icons.Filled.Add" Color="Color.Primary" @onclick="() => Redirect()">Add</MudButton>
