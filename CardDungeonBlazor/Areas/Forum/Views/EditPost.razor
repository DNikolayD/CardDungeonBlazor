@page "/posts/{id}/edit"
@using CardDungeonBlazor.Areas.Forum.Controlls;
@inherits EditPostController
@attribute [Authorize]

<MudText Typo="Typo.h3">Create Post</MudText>
<EditForm Model="@Model" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <MudCard Class="pa-4">
        <MudCardContent>
            <MudTextField Label="Title" Class="mt-3" @bind-Value="Model.Title" For="@(() => Model.Title)" />
            <MudTextField Label="Text" Class="mt-3" @bind-Value="Model.TextContent" For="@(() => Model.TextContent)" />
            <MudTextField Label="Image" Class="mt-3" @bind-Value="Model.Image" For= "@(() => Model.Image)" />
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Edit Post</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>